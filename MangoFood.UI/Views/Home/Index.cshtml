@model IEnumerable<ProductResponseDto>

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-white-50 text-center py-2">@product.Name</h3>
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="image-container card-img-top" style="background-image: url('@product.ImageUrl');"></div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px;">@product.Price $</span>
                                <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
                            </div>
                            <p class="card-text">@Html.Raw(product.Description)</p>
                            <div class="row">
                                <div class="col">
                                    <a asp-action="ProductDetails" asp-route-productId="@product.Id"
                                       class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>

<style>
    .image-container {
        width: 100%; /* Chiều rộng theo khung cha */
        aspect-ratio: 1 / 1; /* Đảm bảo khung hình vuông */
        background-size: cover; /* Đảm bảo ảnh phủ đầy khung */
        background-position: center center; /* Căn giữa hình ảnh */
        background-repeat: no-repeat; /* Không lặp lại ảnh */
        margin: 0; /* Loại bỏ khoảng cách không cần thiết */
        overflow: hidden; /* Đảm bảo ảnh không vượt ra ngoài khung */
    }

    .card .image-container {
        border-radius: inherit; /* Đảm bảo border-radius giống với khung cha */
        display: block; /* Đảm bảo hiển thị đúng dạng block */
    }

</style>